<Window x:Class="Nuxe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nuxe" 
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowState}"
        Title="{Binding TitleText}" d:Title="Nuxe 0.0.0" 
        SizeToContent="Height" MinWidth="450" Width="800" Closed="Window_Closed" Loaded="Window_Loaded">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="Normal"/>
    </Window.TaskbarItemInfo>
    <StackPanel Margin="6">
        <TabControl x:Name="TabControlSettings">
            <TabItem Header="Basic">
                <StackPanel>
                    <local:DirectoryInput Label="Game Directory" Prompt="Select game directory" Path="{Binding GameDirectory, Mode=TwoWay}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Click="ButtonUnpack_Click">Unpack</Button>
                        <Button Click="ButtonPatch_Click">Patch</Button>
                        <Button Click="ButtonRestore_Click">Restore</Button>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <TabItem Header="Advanced">
                <TabControl Margin="-3 3 -3 -3">
                    <TabItem Header="Unpack">
                        <StackPanel>
                            <local:DirectoryInput Label="Game Directory" Prompt="Select game directory" Path="{Binding GameDirectory, Mode=TwoWay}"/>
                            <Label>Game Type</Label>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Grid.Column="0" ItemsSource="{Binding GameConfigs}"/>
                                <Button Grid.Column="1">Unpack</Button>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Patch">
                        <StackPanel>
                            <local:DirectoryInput Label="Game Directory" Prompt="Select game directory"  Path="{Binding GameDirectory, Mode=TwoWay}"/>
                            <Label>Game Type</Label>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Grid.Column="0" ItemsSource="{Binding GameConfigs}"/>
                                <Button Grid.Column="1">Patch</Button>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Restore">
                        <StackPanel>
                            <local:DirectoryInput Label="Game Directory" Prompt="Select game directory"  Path="{Binding GameDirectory, Mode=TwoWay}"/>
                            <Label>Game Type</Label>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Grid.Column="0" ItemsSource="{Binding GameConfigs}"/>
                                <Button Grid.Column="1">Restore</Button>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Decrypt">
                        <StackPanel>
                            <local:DirectoryInput Label="Game Directory" Prompt="Select game directory"  Path="{Binding GameDirectory, Mode=TwoWay}"/>
                            <Label>Game Type</Label>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Grid.Column="0" ItemsSource="{Binding GameConfigs}"/>
                                <Button Grid.Column="1">Decrypt</Button>
                            </Grid>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>

        <GroupBox Header="Status">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TextBoxStatus" Grid.Column="0" IsReadOnly="True"/>
                    <Button x:Name="ButtonAbort" Grid.Column="1" Click="ButtonAbort_Click">Abort</Button>
                </Grid>
                <ProgressBar x:Name="ProgressBar" d:Value="50"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
