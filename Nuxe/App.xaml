<Application x:Class="Nuxe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Nuxe"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="BoxStyle" TargetType="Control">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Height" Value="24"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource BoxStyle}">
            <Setter Property="Width" Value="100"/>
            <Setter Property="TextElement.FontWeight" Value="Medium"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5 5 5 0"/>
        </Style>

        <Style TargetType="ComboBox" BasedOn="{StaticResource BoxStyle}"/>

        <Style TargetType="Label">
            <Setter Property="Padding" Value="5 5 5 0"/>
        </Style>

        <Style TargetType="ProgressBar" BasedOn="{StaticResource BoxStyle}"/>

        <Style TargetType="TabControl">
            <Setter Property="Margin" Value="3"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource BoxStyle}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Application.Resources>
</Application>
